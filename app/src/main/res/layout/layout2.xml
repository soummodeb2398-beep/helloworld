<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <SearchView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >



        </SearchView>

        <!-- প্রথম ব্লক -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="100dp"
                android:layout_height="76dp"
                android:layout_gravity="start"
                android:contentDescription="Hill image"
                android:paddingLeft="10dp"
                android:paddingBottom="15dp"
                android:src="@drawable/hill" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:text="A hill is a natural rise of the earth that is smaller than a mountain.
Hills are often covered with grass, trees, or small bushes.
They provide a beautiful view of the surrounding landscape." />
        </LinearLayout>

        <!-- দ্বিতীয় ব্লক -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="100dp"
                android:layout_height="76dp"
                android:layout_gravity="start"
                android:contentDescription="Hill image"
                android:paddingLeft="10dp"
                android:paddingBottom="15dp"
                android:src="@drawable/hill" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:text="A hill is a natural rise of the earth that is smaller than a mountain.
Hills are often covered with grass, trees, or small bushes.
They provide a beautiful view of the surrounding landscape." />
        </LinearLayout>

        <!-- চাইলে আরো ব্লক যোগ করতে পারো copy-paste করে -->

    </LinearLayout>
</ScrollView>

